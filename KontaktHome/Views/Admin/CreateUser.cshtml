@using Entities
@model Users
@{
    ViewBag.Title = "CreateUser";
}
@section JavaScript{
    <script>
        document.getElementById('sidemenu2').className = 'nav-item has-treeview menu-open';
        document.getElementById('sidemenu2_1').className = 'nav-link active';
        document.getElementById('newUser').className = 'nav-link active';
    </script>
}
<div class="content ">
    <div class="container">
        <!-- /.left panel -->
        <div class="col-md-12">
            @if (TempData["msg"] != null)
            {
                if (TempData["msg"].ToString() == "0")
                {
                    <script>
                        Swal.fire(
                            ' error',
                            '',
                            'success'
                        )
                    </script>
                }
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    @Html.ValidationSummary(false)
                </div>
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Yeni İstifadəçi</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Domain İstifadəçisi</label>
                                    @Html.DropDownList("Domain User", Model.myADUsers, "", new { @class = "form-control", id = "DomainUser" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>İstifadəçi Kodu</label>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", id = "userUserName", placeholder = "İstifadəçi kodu...", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>İstifadəçi Adı</label>
                                    @Html.EditorFor(model => model.UserDisplayName, new { htmlAttributes = new { @class = "form-control", id = "userUserDisplayName", placeholder = "İstifadəçi adı..", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.UserDisplayName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mağaza Kodu</label>
                                    @Html.EditorFor(model => model.StoreCode, new { htmlAttributes = new { @class = "form-control", id = "", placeholder = "Mağaza kodu..." } })
                                    @Html.ValidationMessageFor(model => model.StoreCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mağaza Adı</label>
                                    @Html.EditorFor(model => model.StoreName, new { htmlAttributes = new { @class = "form-control", id = "", placeholder = "Mağaza adı..." } })
                                    @Html.ValidationMessageFor(model => model.StoreName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Dəyişiklik Edebiləcəyi Gün Sayı</label>
                                    @Html.EditorFor(model => model.EditDate, new { htmlAttributes = new { @class = "form-control", id = "userEditdate", placeholder = "Gün ..." } })
                                    @Html.ValidationMessageFor(model => model.EditDate, "", new { @class = "text-danger" })
                                </div>
                            </div>                         
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary float-right">Qeyd Et</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
