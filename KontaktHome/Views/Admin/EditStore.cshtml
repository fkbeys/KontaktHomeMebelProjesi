@using Entities.Model.LocalModels
@model Entities.Stores

@{
    Layout = null;
}

<form action="EditStore" onsubmit=" return jQueryAjaxPost(this);">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.StoreID)
    @Html.HiddenFor(x=>x.StoreCode)
    @Html.HiddenFor(x=>x.IsActive)
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Nişangah Adı</label>
                @Html.TextBoxFor(x => x.StoreName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StoreName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Qeyd Et</button>
        </div>
    </div>
</form>