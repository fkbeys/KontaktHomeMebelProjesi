                                    </div>
                                </div>
                            </div>
                            <div class="row mt-1" id="containerVisitor">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Vizitor Adı</label>
                                        <div class="col-form-txt">
                                            @*@Html.DropDownList("Visitor", (ViewBag.Visitor as SelectList), "", new { @class = "form-control", @id = "visitorCode" })*@
                                            @Html.DropDownListFor(model => model.VisitorCode, new SelectList(ViewBag.Visitor, "Value", "Text"), "", new { @class = "form-control", @id = "visitorCode" })
