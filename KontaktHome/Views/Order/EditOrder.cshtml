                                    </div>
                                </div>
                                <div class="row mt-1" id="containerPlanner">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Planlamacı Adı</label>
                                            <div class="col-form-txt">
                                                @Html.DropDownListFor(model => model.PlannerCode, new SelectList(ViewBag.Planner, "Value", "Text"), "", new { @class = "form-control", @id = "plannerCode" })

