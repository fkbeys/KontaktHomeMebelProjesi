
@{
    ViewBag.Title = "VisitorOrders";
}


<div class="row">
    @if (TempData["msg"] != null)
    {
        if (TempData["msg"].ToString() == "3")
        {
            <script>
                Swal.fire(
                    'Sifariş Qəbul Eilməyib!',
                    '',
                    'error'
                )
            </script>
        }
        else if (TempData["msg"].ToString() == "2")
        {
            <script>
                Swal.fire(
                    'Sifariş Qəbul Edildi!',
                    '',
                    'success'
                )
            </script>
        }
        else if (TempData["msg"].ToString() == "1")
        {
            <script>
                Swal.fire(
                    'Qeyd Yeniləndi!',
                    '',
                    'success'
                )
            </script>
        }
    }
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h4 class="card-title">Aktiv Vizitor Sifarişləri</h4>
            </div>
            <div class="card-body">
                <div class="row col-md-6">
                    <div class="col-md-6 col-xl-4" id="sandbox-container">
                        <div class="form-group">
                            <label>Başlanğıc Tarixi</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" class="form-control " id="visitfirstDate">
                            </div>
                        </div>
                    </div>
                    <div class=" col-md-6 col-xl-4" id="sandbox-container">
                        <div class="form-group">
                            <label>Bitiş Tarixi</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" class="form-control " id="visitlastDate">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="chkVisitActiveOrders" value="option1" checked>
                                <label for="chkVisitActiveOrders" class="custom-control-label">Aktiv Sifarişlər</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="chkVisitClosedOrders" value="option1">
                                <label for="chkVisitClosedOrders" class="custom-control-label">İmtina Edilmiş Sifarişlər</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" onclick="getVisitorActiveOrdersWithParametr()" class="btn btn-primary">Axtar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-body">
                <div class="col-md-12">
                    <div class="table-responsive" id="visitorOrdersPrint">
                        <table id="tableVisitorOrders" class="display" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Sifariş No</th>
                                    <th>Tarix</th>
                                    <th>Müştəri Məlumatları</th>
                                    <th>Tel No</th>
                                    <th>Nişangah</th>
                                    <th>Status</th>
                                    <th>Link</th>
                                    <th>StatusId</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script>
        document.getElementById('sidemenu1').className = 'nav-item has-treeview menu-open';
        document.getElementById('sidemenu1_1').className = 'nav-link active';
        document.getElementById('visitorOrders').className = 'nav-link active';
        document.getElementById('visitfirstDate').value = getToday();
        document.getElementById('visitlastDate').value = getToday();
    </script>
    }

