@using KontaktHome.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Kontakt Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/plugins/datetimepicker/css/bootstrap-datepicker.standalone.min.css" rel="stylesheet" />
    <link href="~/plugins/datetimepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/plugins/datetimepicker/css/bootstrap-datepicker3.standalone.min.css" rel="stylesheet" />
    <link href="~/plugins/datetimepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/plugins/DataTables_2/DataTables-1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/plugins/fancybox/jquery.fancybox.min.css" rel="stylesheet" />
    <link href="~/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
    <link href="~/plugins/ekko-lightbox/ekko-lightbox.css" rel="stylesheet" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <script src="~/Scripts/MyScripts.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item"> <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a> </li>
                <li class="nav-item d-sm-inline-block"> <a href="/Home/Index" class="nav-link">Ana Səhifə</a> </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item  d-sm-inline-block "> <a href="/Home/Logout" class="nav-link font-weight-bold">Çıxış</a> </li>
            </ul>

        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/Home/Index" class="brand-link">
                <img src="~/dist/img/logo.jpg" alt="KontaktHome Logo" class="brand-image elevation-0"
                     style="opacity: .8"> <span class="brand-text font-weight-light">  Kontakt Home</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image"> <img src="~/dist/img/user_white.svg" class="img-circle elevation-2" alt="User Image"> </div>
                    <div class="info"> <a href="/Home/Index" class="d-block">@CurrentSession.User.UserDisplayName</a> </div>
                </div>
                @Html.Partial("_LeftMenu")
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="container-fluid pt-3">
                @RenderBody()
            </div>
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2020 <a href="/Home/Index">Kontakt Home</a>.</strong> All rights reserved.
            <div class="float-right d-none d-sm-inline-block"> <b>Version</b> @ViewContext.Controller.GetType().Assembly.GetName().Version </div>
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>  
    <script src="~/plugins/DataTables_2/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/plugins/moment/moment.min.js"></script>    
    <script src="~/Scripts/jquery.inputmask.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/dist/js/demo.js"></script>
    <script src="~/plugins/datetimepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/plugins/datetimepicker/locales/bootstrap-datepicker.az.min.js"></script>
    <script src="~/Scripts/MyScripts.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/plugins/ekko-lightbox/ekko-lightbox.min.js"></script>
    <script src="~/plugins/fancybox/jquery.fancybox.min.js"></script>
    <script>
        $(function () {
            $('#telno1').inputmask("(999)999-99-99")
            $('#telno2').inputmask("(999)999-99-99")
            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
            $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
            $('[data-mask]').inputmask()

        })
        $(function () {
            $(document).on('click', '[data-toggle="lightbox"]', function (event) {
                event.preventDefault();
                $(this).ekkoLightbox({
                    alwaysShowClose: true
                });
            });
        })
        Inputmask.extendAliases({
            decimal: {
                alias: 'numeric',
                digits: 3
            }
        })
        Inputmask().mask(document.querySelectorAll('.inputmask'))
    </script>
    @RenderSection("JavaScript", false)
</body>
</html>
